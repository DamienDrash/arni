name: AI Evaluation Pipeline

on:
  push:
    branches: [ "main" ]
    paths:
      - "app/swarm/**"
      - "tests/evals/**"
      - ".github/workflows/eval.yml"
  pull_request:
    branches: [ "main" ]
    paths:
      - "app/swarm/**"
      - "tests/evals/**"
      - ".github/workflows/eval.yml"

jobs:
  evaluate-agent:
    runs-on: ubuntu-latest
    
    env:
      OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}  # Required for DeepEval judges
      DEEPEVAL_APP_KEY: ${{ secrets.DEEPEVAL_APP_KEY }} # Optional result upload
      
    steps:
    - uses: actions/checkout@v4
    
    - name: Set up Python 3.12
      uses: actions/setup-python@v5
      with:
        python-version: "3.12"
        
    - name: Install Dependencies
      run: |
        python -m pip install --upgrade pip
        pip install ".[dev]"
        pip install deepeval pytest
        
    - name: Run DeepEval Suite
      run: |
        pytest tests/evals/test_faithfulness.py --verbose -x
      continue-on-error: true
